---
// src/pages/waitlist.astro

import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';
import Headline from '~/components/ui/Headline.astro';

const metadata = {
  title: 'Join Waitlist',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Early Access"
    title="Image Recognition Card Scanner + eBay Listing Tool"
  />

  <WidgetWrapper id="waitlist" containerClass="max-w-2xl mx-auto mt-10">
    <div class="text-center p-6 rounded-md shadow-xl dark:border dark:border-slate-600">
      <Headline
        title="Get Early Access"
        subtitle="Be the first to try our all-in-one card scanner and eBay listing app."
        classes={{
          container: 'mb-4',
          title: 'text-4xl font-bold mb-2',
          subtitle: 'text-lg text-muted dark:text-slate-400',
        }}
      />

      <form action="https://formspree.io/f/mjkrwayn" method="POST" class="mt-6">
        <div class="flex flex-col gap-4">
          <input type="text" name="name" placeholder="Full Name" required class="w-full p-3 border rounded-md" />
          <input type="email" name="email" placeholder="Email Address" required class="w-full p-3 border rounded-md" />
          <button type="submit" class="w-full p-3 bg-blue-600 text-white rounded-md">Join the Waitlist</button>
        </div>
      </form>
    </div>
  </WidgetWrapper>
</Layout>
