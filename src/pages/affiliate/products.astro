---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Affiliate Recommendations',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Affiliate Recommendations"
    title="Discover the Best Products for Your Needs"
    subtitle="Explore my selection of top-rated products, from scanners to card sleeves and bubble mailers. Find the perfect tools to enhance your workflow in the trading card reselling industry."
    actions={[{ variant: 'primary', target: '_blank', text: 'Start exploring', href: '/' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Affiliate Recommendations Hero Image',
    }}
  />

  <!-- Features4 Replacement ********* -->

  <section class="relative mx-auto max-w-7xl px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold tracking-tight dark:text-white sm:text-4xl">
        Top Product Categories
      </h2>
      <p class="mt-4 text-lg text-slate-600 dark:text-slate-400">
        Check out our handpicked recommendations for the best products in each category.
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-6">
      {[
        {
          title: "Best Scanners",
          description:
            "Find the best scanners for digitizing documents, photos, and more. Perfect for home offices, businesses, and creative projects.",
          icon: "tabler:scan",
          href: "/auto-feed-card-scanners",
          buttonText: "Read More",
        },
        {
          title: "Best Card Sleeves",
          description:
            "Protect your trading cards, gaming cards, and collectibles with our top-rated card sleeves. Durable, clear, and affordable options.",
          icon: "tabler:cards",
          href: "/blog/best-card-sleeves",
          buttonText: "Read More",
        },
        {
          title: "Best Bubble Mailers",
          description:
            "Ship your items safely with our recommended bubble mailers. Lightweight, durable, and perfect for e-commerce businesses.",
          icon: "tabler:package",
          href: "/blog/best-bubble-mailers",
          buttonText: "Read More",
        },
        {
          title: "Best Label Printers",
          description:
            "Streamline your shipping and organization with the best label printers. Ideal for small businesses and home use.",
          icon: "tabler:printer",
          href: "/blog/best-label-printers",
          buttonText: "Read More",
        },
        {
          title: "Best Storage Boxes",
          description:
            "Keep your items organized with our top picks for storage boxes. Great for home organization, moving, and archival purposes.",
          icon: "tabler:box",
          href: "/blog/best-storage-boxes",
          buttonText: "Read More",
        },
        {
          title: "Best Envelopes",
          description:
            "Find the best envelopes for mailing letters, invitations, and documents. Available in various sizes and styles.",
          icon: "tabler:mail",
          href: "/blog/best-envelopes",
          buttonText: "Read More",
        },
      ].map((item) => (
        <div class="block w-full h-full rounded-lg shadow-[0_4px_30px_rgba(0,0,0,0.1)] backdrop-blur border border-[#ffffff29] bg-white dark:bg-slate-900 p-6">
          {item.icon && (
            <div class="w-12 h-12 mb-6 text-primary">
            </div>
          )}
          <h3 class="text-xl font-bold mb-2">{item.title}</h3>
          <p class="text-slate-600 dark:text-slate-400">{item.description}</p>
          {item.buttonText && (
            <a
              href={item.href}
              class="mt-4 inline-block px-4 py-2 bg-primary text-white rounded-md transition-colors hover:bg-blue-700"
            >
              {item.buttonText}
            </a>
          )}
        </div>
      ))}
    </div>
  </section>
  
  
  
  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Genuine Recommendations',
        description:
          'I only recommend products I use or would use in my Pokemon reselling business. I spend a lot of time looking for the best products at the best prices.',
        icon: 'tabler:star',
      },
      {
        title: 'Affiliate Benefits',
        description:
          'Support by purchasing through my affiliate links. You get great products, and I earn a small commission at no extra cost to you.',
        icon: 'tabler:coin',
      },
      {
        title: 'Wide Variety',
        description:
          'I cover a range of categories to meet all your needs, from office supplies to shipping materials.',
        icon: 'tabler:apps',
      },
    ]}
    image={{
      src: 'https://s7ub4m8kg7.ufs.sh/f/vSQesHp5YCfTgy9OjUZJPnHFkd0rV3osz14NcGB7M9emTRqQ',
      alt: 'Affiliate Benefits Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Our Recommendations?</h3>
    </Fragment>
  </Content>

